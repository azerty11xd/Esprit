pipeline {
    agent any
    environment {
        EMAIL_RECIPIENTS = 'maleksaadani90@gmail.com'
		def mvnHome = tool 'Maven'
    }
    stages {
        stage('Clone Repo') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: 'main']],
                doGenerateSubmoduleConfigurations: false,gitTool: 'Default',
                submoduleCfg: [], userRemoteConfigs: [[ 
                url: 'https://github.com/azerty11xd/Esprit.git']]])
            }
        }
		stage('Clean Tests Stage') {
            steps {
                script{
                    bat "${mvnHome}/bin/mvn clean test"
				}
            }
        }
        stage('Clean Compile Stage') {
            steps {
                script{
                    bat "${mvnHome}/bin/mvn clean compile "
				}
            }
        }
		stage('Deploy and Quality Gate Stage') {
			parallel {
				stage('Deploy to Nexus') {
					steps {
						script{
							bat "${mvnHome}/bin/mvn deploy -DskipTests=true "
						}
					}
				}
				stage('Quality Gate') {
					steps {
						script{
  
 
                             bat "${mvnHome}/bin/mvn -U sonar:sonar -Dsonar.host.url=http://localhost:9000 -Dsonar.login=562e0c5100febffe01b71e428f47dc95e88fcb29"
                            
                            
						}    
					}
				}
			}
		}
	}
    post { 
        success {
                emailext (
                    to: "${EMAIL_RECIPIENTS}",
                    replyTo: "${EMAIL_RECIPIENTS}",
                    subject: "[BuildResult][${currentBuild.currentResult}] - Job '${env.JOB_NAME}' (${env.BUILD_NUMBER})",
                    mimeType: 'text/html',
                    body: '''${JELLY_SCRIPT, template="custom-html.jelly"}'''
                )
        }
		failure {
                emailext (
                    to: "${EMAIL_RECIPIENTS}",
                    replyTo: "${EMAIL_RECIPIENTS}",
                    subject: "[BuildResult][${currentBuild.currentResult}] - Job '${env.JOB_NAME}' (${env.BUILD_NUMBER})",
                    mimeType: 'text/html',
                    body: '''${JELLY_SCRIPT, template="custom-html.jelly"}'''
                )
        }
		aborted {
			     emailext (
                    to: "${EMAIL_RECIPIENTS}",
                    replyTo: "${EMAIL_RECIPIENTS}",
                    subject: "[BuildResult][${currentBuild.currentResult}] - Job '${env.JOB_NAME}' (${env.BUILD_NUMBER})",
                    mimeType: 'text/html',
                    body: '''${JELLY_SCRIPT, template="custom-html.jelly"}'''
                )
		}
    }
    options {
        disableConcurrentBuilds()
        buildDiscarder(logRotator(numToKeepStr: '10'))
        timeout(time: 25, unit: 'MINUTES')
    }
}
def getVersion() {
      def pom = readMavenPom file: './pom.xml'
      print pom.version
      return pom.version
}